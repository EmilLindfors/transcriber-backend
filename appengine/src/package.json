{
  "name": "transcriber-backend-on-appengine",
  "description": "Integration to Google Speech api",
  "scripts": {
    "prepare": "npm run gcp-build",
    "copy-source": "rsync -u ../../functions/src/database.ts ./database.ts && rsync -u ../../functions/src/interfaces.d.ts ./interfaces.d.ts && rsync -u ../../functions/src/enums.ts ./enums.ts",
    "preinstall": "npm run copy-source",
    "pretest": "npm run gcp-build",
    "test": "repo-tools test app -- index.js",
    "posttest": "npm run lint",
    "lint": "tslint -p .",
    "dev": "npm run gcp-build && npm run start",
    "start": "node ./index.js",
    "gcp-build": "tsc -p .",
    "deploy": "npm run copy-source && npm run gcp-build && gcloud app deploy"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "dependencies": {
    "@google-cloud/storage": "^2.3.3",
    "express": "^4.16.4",
    "firebase-admin": "^8.1.0",
    "firebase-functions": "^2.3.1",
    "googleapis": "^40.0.0",
    "serialize-error": "^4.1.0",
    "typescript": "^3.5.2"
  },
  "devDependencies": {
    "@google-cloud/nodejs-repo-tools": "^3.3.0",
    "@types/express": "^4.17.0",
    "@types/serialize-error": "^4.0.1",
    "mocha": "^6.0.0",
    "tslint": "^5.17.0"
  },
  "cloud-repo-tools": {
    "requiresProjectId": true,
    "requiresKeyFile": true,
    "test": {
      "app": {
        "requiredEnvVars": [
          "GCLOUD_STORAGE_BUCKET"
        ],
        "msg": "<input type=\"file\" name=\"file\">",
        "substitutions": "YOUR_BUCKET_NAME=$GCLOUD_STORAGE_BUCKET"
      },
      "build": {
        "requiredEnvVars": [
          "GCLOUD_STORAGE_BUCKET"
        ]
      }
    }
  }
}
